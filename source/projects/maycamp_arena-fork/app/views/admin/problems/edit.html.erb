<h1>Промяна на <%= @problem.name %></h1>
<%= form_for [:admin, @problem.contest, @problem] do |f| -%>
  <p>
    <%= f.error_messages %>
  </p>
  <%= render :partial => 'problem_fields', :locals => { :f => f } %>
  <p>
    <%= f.submit "Обновяване" %><%= link_to "Отказ", admin_contest_problems_path(@problem.contest) %>
  </p>
<% end -%>